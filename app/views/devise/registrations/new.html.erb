<div class="contents">
  <h2 class="keyvisual__title keymessage_today">サインアップ</h2>
  
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <div class="field field keyvisual__title keymessage_today detail__btn">
      <%= f.label :ニックネーム %> <span>(6文字以内)</span><br />
      <%= f.text_field :nickname, class: "content",  autofocus: true, maxlength: "6" %>
    </div>
  
    <div class="field field keyvisual__title keymessage_today detail__btn">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, class: "content", autofocus: true, autocomplete: "email" %>
    </div>
    
    <div class="field keyvisual__title keymessage_today detail__btn gender__btn">
      <ul class="gender">
        <li>
          <%= f.label :性別を選択して下さい, class: "email__label" %><br />
          <%= f.select :gender, [["男性", "男性"], ["女性", "女性"]], include_blank: "選択して下さい" %>
        </li>
      </ul>
    </div>
  
    <div class="field field keyvisual__title keymessage_today detail__btn password__btn">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <span>(<%= @minimum_password_length %>文字以上)</span>
      <% end %><br />
      <%= f.password_field :password, class: "content", autocomplete: "new-password" %>
    </div>
  
    <div class="field field keyvisual__title keymessage_today detail__btn">
      <%= f.label :パスワード（確認のため再入力） %><br />
      <%= f.password_field :password_confirmation, class: "content", autocomplete: "new-password" %>
    </div>
    
    <div class="actions section__btnWrapper detail__btn">
      <%= f.submit "サインアップ", class: "section__btn" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>