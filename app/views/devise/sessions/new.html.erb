<div class="contents">
  <h2 class="keyvisual__title login__headline">ログイン</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field keyvisual__title keymessage_today detail__btn">
      <%= f.label :メールアドレス, class: "email__label" %><br />
      <div class="content_list">
        <%= f.email_field :email, class: "content",  autofocus: true, autocomplete: "email" %>
      </div>
    </div>
  
    <div class="field keyvisual__title keymessage_today detail__btn">
      <%= f.label :パスワード, class: "password__label" %><br />
      <div class="content_list">
        <%= f.password_field :password, class: "content", autocomplete: "current-password" %>
      </div>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field keyvisual__title keymessage_today">
        <%= f.check_box :remember_me %>
        <%= f.label :パスワードを保存する, class: "remember_password" %>
      </div>
    <% end %>
    
    <div class="actions section__btnWrapper detail__btn">
      <%= f.submit "ログイン", class: "section__btn" %>
    </div>
  <% end %>
  
  <%= render "devise/shared/links" %>
</div>