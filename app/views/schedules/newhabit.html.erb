  <div class="contents">
    <h2 class="keyvisual__title keymessage">就寝前のルーティーンを決めましょう</h2>
    <%= form_with(model: @schedule, local: true) do |form| %>
      <ul class="content_list">
        <li class="content_box"><span>1 </span><%= form.text_field :content1, placeholder: "例：お風呂", class: "content" %></li>
        <li class="content_box"><span>2 </span><%= form.text_field :content2, placeholder: "例：読書", class: "content"%></li>
        <li class="content_box"><span>3 </span><%= form.text_field :content3, class: "content" %></li>
        <li class="content_box"><span>4 </span><%= form.text_field :content4, class: "content" %></li>
      </ul>
      <div class="section__btnWrapper">
        <%= form.submit "作成", class: "section__btn" %>
      </div>
    <% end %>
  </div>